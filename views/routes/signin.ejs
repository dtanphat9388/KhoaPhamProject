<%- include('../partials/header.ejs') %>

<div id="signinForm">
   <div class="panel panel-primary">
      <div class="panel-heading">
         <h1 style="text-align:center">SIGN IN</h1>
      </div>

      <div class="panel-body">
         <form class="" action="/signin" method="post">
            <div class="input-group input-group-lg">
               <span class="input-group-addon" id="sizing-addon3">@</span>
               <input type="text" required autofocus class="form-control" placeholder="Username" aria-describedby="sizing-addon3">
            </div>
            <div class="input-group input-group-lg">
               <span class="input-group-addon" id="sizing-addon3">
                  <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
               </span>
               <input type="password" required class="form-control" placeholder="Password" aria-describedby="sizing-addon3">
            </div>
            <button type="submit" class="btn btn-primary" >Sign in</button>
         </form>
      </div>
      <div class="panel-footer">

         <p style="text-align:center"><a href="/signup">Sign up</a> if not account</p>
      </div>
   </div>
</div>

<%- include('../partials/footer.ejs') %>
